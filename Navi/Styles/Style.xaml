<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Navi.Styles">

    <Style x:Key="BaseText" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style x:Key="LightBaseText" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource BaseBrush}"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="MainButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource BaseBrush}"/>
        <Setter Property="Margin" Value="5,15,5,0"/>
        <Setter Property="Padding" Value="4,4,4,4"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>

</ResourceDictionary>