<UserControl x:Class="Navi.View.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Navi.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Margin="0" HorizontalAlignment="Stretch" MinWidth="200">
        <Button Command="{Binding LoadClientPage, Mode=OneTime}"
                Height="Auto"  MinHeight="50">
            <TextBlock FontFamily="Segoe UI Symbol" FontSize="14">
                        <Run Text="&#xE0A5; Клієнти" />
            </TextBlock>
        </Button>
        <Button Command="{Binding LoadFirstUCCommand, Mode=OneTime}"
                Height="Auto" MinHeight="50">
            <TextBlock FontFamily="Segoe UI Symbol" FontSize="14">
                        <Run Text="&#xE2AF; Абонементи" />
            </TextBlock>
        </Button>
        <Button Command="{Binding LoadSecondUCCommand, Mode=OneTime}"
                Height="Auto" MinHeight="50">
            <TextBlock FontFamily="Segoe UI Symbol" FontSize="14">
                        <Run Text="&#xE1E2; " />
            </TextBlock>
        </Button>
    </StackPanel>
</UserControl>

